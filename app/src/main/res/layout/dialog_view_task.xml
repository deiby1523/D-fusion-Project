<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:verticalScrollbarPosition="left"
    app:cardCornerRadius="30dp"
    app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/viewTaskTitle"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Tarea"
                    android:textColor="@color/purple"
                    android:textSize="30sp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="20dp">
                    <TextView
                        android:id="@+id/labelCourse"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Materia:"
                        android:textColor="@color/purple"
                        android:textSize="20sp" />

                    <TextView
                        android:textIsSelectable="true"

                        android:id="@+id/viewCourse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Materia"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:id="@+id/labelDueDate"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Fecha:"
                        android:textColor="@color/purple"
                        android:textSize="20sp" />

                    <TextView
                        android:textIsSelectable="true"

                        android:id="@+id/viewDueDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="dd/mm/aaaa" android:textSize="20sp" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:id="@+id/labelTaskDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DescripciÃ³n de la Tarea:"
                        android:textColor="@color/purple"
                        android:textSize="20sp"  />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:scrollbarAlwaysDrawVerticalTrack="false"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:textIsSelectable="true"
                                android:id="@+id/viewTaskDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Descripcion de la Tarea"
                                android:textSize="18sp"/>

                        </LinearLayout>

                    </ScrollView>
                </LinearLayout>


                <Button
                    android:id="@+id/btnClose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="@color/purple"
                    android:text="Cerrar"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</androidx.cardview.widget.CardView>
